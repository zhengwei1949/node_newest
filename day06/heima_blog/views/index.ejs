<%- include('./layouts/header.ejs') %>


  <h1>文章列表</h1>


  <!-- 文章列表区域 -->
  <div class="list-group">
    <% list.forEach( item =>{ %>
    <a href="/article/info?id=<%= item.id %>" class="list-group-item">
        <span class="badge" style="background-color: #5bc0de;">发表时间：<%= item.ctime %></span>
        <span class="badge" style="background-color: #f0ad4e;">作者：<%= item.nickname %></span>
        <%= item.title %>
    </a>
    <% } ) %>
  </div>


  <!-- 实现分页功能 -->
  <nav aria-label="Page navigation">
      <ul class="pagination">
        <li class="<%= nowPage == 1 ? 'disabled' : '' %>">
          <<%= nowPage == 1 ? 'span' : 'a' %> href="/?page=<%= nowPage == 1 ? 1 : nowPage - 1 %>" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </<%= nowPage == 1 ? 'span' : 'a' %>
        </li>
        <% for( let i = 0; i < totalPage; i++ ){ %>
          <li class="<%= nowPage == (i+1) ? 'active' : '' %>"><a href="/?page=<%= i+1 %>"><%= i+1 %></a></li>
          <% } %>
        <li class="<%= nowPage == totalPage ? 'disabled' : '' %>">
          <<%= nowPage == totalPage ? 'span' : 'a' %> href="/?page=<%= nowPage == totalPage ? totalPage : nowPage + 1 %>" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </<%= nowPage == totalPage ? 'span' : 'a' %>>
        </li>
      </ul>
    </nav>


  <%- include('./layouts/footer.ejs') %>